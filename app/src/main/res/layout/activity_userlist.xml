<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userlist">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Donors List"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">
        <Button
            android:id="@+id/aPositive"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="A+"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/bPositive"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="B+"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/oPositive"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="O+"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/abPositive"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="AB+"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">
        <Button
            android:id="@+id/aNegative"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="A-"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/bNegative"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="B-"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/oNegative"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="O-"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/abNegative"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="AB-"
            android:textSize="20sp"
            android:backgroundTint="#FF0000"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>